/*--------------------------------bfs--------------------------------------*/

vector<int> g[N]; // creating n vector 
bool vis[N];
int level[N];
void bfs(int source)
{
    queue<int> q;
    q.push(source);
    vis[source] = 1;
    while (!q.empty())
    {
        int cur_v = q.front();
        q.pop();
        cout << cur_v << " ";
        for (int child : g[cur_v])
        {
            if (!vis[child])
            {
                q.push(child);
                vis[child] = 1;
                level[child] = level[cur_v] + 1;
            }
        }
    }
}

int main()
{
    fastio;
    ll n;
    cin >> n;
    for (int i = 0; i < n - 1; i++) // for simple graph/tree // for n vertiecs ,edges=n-1
    {
        int v1, v2;
        cin >> v1 >> v2;
        g[v1].push_back(v2);
        g[v2].push_back(v1);
    }
    bfs(1);
    cout << endl;
    for (int i = 1; i <= n; i++)
    {
        cout << i << ": " << level[i] << endl;
    }
    return 0;
}
